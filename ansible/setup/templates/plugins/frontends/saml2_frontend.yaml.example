module: vopaas.frontends.saml2_frontend.VOPaaSSamlFrontend
plugin: FrontendModulePlugin
name: "VOPaaS_SAML_FRONT"
config:
  base: "<base_url>"
  endpoints:
    single_sign_on_service: {'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST': sso/post,
      'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect': sso/redirect}
  idp_config:
    cert_file: "{{ proxy_frontend_cert }}"
    debug: No
    description: ""
    entityid: "<base_url>/<name>/proxy.xml"
    key_file: "{{ proxy_frontend_key }}"
    logger:
      loglevel: "info"
      rotating: {backupCount: 5, filename: "idp.log", maxBytes: 500000}
    metadata:
      local: []
    service:
      idp:
        endpoints:
          single_sign_on_service: []
        name: ""
        name_id_format: ['urn:oasis:names:tc:SAML:2.0:nameid-format:persistent', 'urn:oasis:names:tc:SAML:2.0:nameid-format:transient']
        policy:
          default:
            attribute_restrictions: null
            fail_on_missing_requested: No
            lifetime: {minutes: 15}
            name_form: "urn:oasis:names:tc:SAML:2.0:attrname-format:uri"
        subject_data: "./idp.subject"
        want_authn_requests_signed: No
    xmlsec_binary: "{{ xmlsec_binary }}"
