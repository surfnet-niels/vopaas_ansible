module: satosa.backends.openid_connect.OpenIdBackend
name: openid_connect
plugin: BackendModulePlugin
config:
  acr_values: [PASSWORD]
  authz_page: <name>
  client:
    behaviour:
      response_type: code
      scope: [openid, profile, email, address, phone]
    client_info:
      application_name:
      application_type: web
      contacts: []
      post_logout_redirect_uris: [<base_url>/<name>/logout]
      redirect_uris: [<base_url>/<name>]
      subject_type: public
  op_url:
  state_id: <name>
  verify_ssl: false
  op_info:
    contact_person: technical
    - contact_type:
        email_address: []
        given_name:
        sur_name:
    - contact_type: support
        email_address: []
        given_name:
    organization:
      display_name:
        - ["", en]
      name:
        - ["", se]
        - ["", en]
      url:
        - ["", en]
        - ["", se]
    ui_info:
      description:
        - ["", en]
      display_name:
        - ["", en]
      logo:
        - {width: '', height: '', lang: en, image: ''}
  logger:
    loglevel: debug
    rotating: {backupCount: 5, filename: {{ logs_dir }}/openid_backend.log, maxBytes: 500000}
