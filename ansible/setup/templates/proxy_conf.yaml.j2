#--- SATOSA Config ---#
BASE: https://{{ proxy_hostname }}:{{ proxy_port }}
INTERNAL_ATTRIBUTES: "{{ proxy_dir }}/internal_attributes.yaml"
COOKIE_STATE_NAME: "VOPAAS_STATE"
STATE_ENCRYPTION_KEY: ""
PLUGIN_PATH:
  - "{{ frontend_plugin_dir }}"
  - "{{ backend_plugin_dir }}"
  - "{{ micro_service_dir }}"
BACKEND_MODULES: "{{ backend_plugins_enabled }}"
FRONTEND_MODULES:
  - "saml2_frontend"
MICRO_SERVICES:
  - "statistics_service"
USER_ID_HASH_SALT: ""
CONSENT:
  enable: Yes
  rest_uri: ""
  redirect: ""
  endpoint: "handle_consent"
  sign_key: "{{ proxy_jwt_signing_key }}"
  state_enc_key: ""
  verify_ssl: No
ACCOUNT_LINKING:
  enable: Yes
  rest_uri: ""
  redirect: ""
  endpoint: "handle_account_linking"
  sign_key: "{{ proxy_jwt_signing_key }}"
  verify_ssl: No
LOGGING:
  version: 1
  formatters:
    simple:
      format: "[%(asctime)-19.19s] [%(levelname)-5.5s]: %(message)s"
  handlers:
    info_file_handler:
      class: logging.handlers.RotatingFileHandler
      level: INFO
      formatter: simple
      filename: info.log
      maxBytes: 10485760 # 10MB
      backupCount: 20
      encoding: utf8
    satosa_file_handler:
      class: logging.FileHandler
      level: DEBUG
      formatter: simple
      filename: satosa.log
      encoding: utf8
  loggers:
    satosa:
      level: DEBUG
      handlers: [satosa_file_handler]
      propagate: no
  root:
    level: INFO
    handlers: [info_file_handler]
